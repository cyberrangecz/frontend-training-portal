#!/bin/sh
# postinst script for kypo-scenario-rest-api
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

listen_port(){
    if [ $(grep -qP "^\s*Listen\s+$1\s*$" /etc/apache2/ports.conf && echo 1 || echo 0) = "0" ]
    then
        echo "Listen $1" >> /etc/apache2/ports.conf
    fi
}

enable_site(){
    if [ -f $1 ]; then
        a2ensite $(basename $1)
    fi
}


case "$1" in
    configure)
        # create log directory before migration
        mkdir -p ${LOG_DIR}
        touch ${LOG_DIR}/kypo2-trainings.log
        chown -R ${USER} ${LOG_DIR}

        # configure apache2
        sed -i "s;\$FQDN;$(hostname -f);g" /etc/apache2/sites-available/kypo2-trainings-ssl.conf
        a2enmod rewrite
        a2enmod ssl
        enable_site /etc/apache2/sites-available/kypo2-trainings.conf
        service apache2 reload || service apache2 start
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

